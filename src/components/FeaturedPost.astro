---
import { Image } from "astro:assets";
import type { Post } from "../lib/blogger";

interface Props {
  post: Post | null;
}

const { post } = Astro.props;
---

{
  post && (
    <section class="space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-3xl font-bold tracking-tight text-text">
          Post em destaque
        </h2>
        <a
          href="/blog"
          class="text-sm font-medium text-primary hover:underline"
        >
          Ir para o blog
        </a>
      </div>

      <a
        href={`/blog/${post.slug}`}
        class="group grid gap-0 overflow-hidden rounded-3xl border border-border bg-surface md:grid-cols-2"
      >
        {post.image && (
          <div class="aspect-video md:aspect-auto">
            <Image
              src={post.image}
              alt={post.title}
              width={1000}
              height={600}
              loading="eager"
              class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
            />
          </div>
        )}

        <div class="flex flex-col p-8">
          <span class="text-xs font-bold uppercase tracking-wider text-text-muted">
            {post.date}
          </span>
          <h3 class="mt-3 text-2xl font-extrabold text-text group-hover:text-primary transition-colors">
            {post.title}
          </h3>
          <p class="mt-4 text-text-muted leading-relaxed">{post.description}</p>

          <div class="mt-8 inline-flex items-center gap-2 text-sm font-bold text-primary">
            Ler agora
            <span aria-hidden="true">â†’</span>
          </div>
        </div>
      </a>
    </section>
  )
}
