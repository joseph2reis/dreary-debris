---
import { Github, Instagram, Linkedin } from "lucide-astro";

const currentYear = new Date().getFullYear();

const links = [
  { label: "Início", href: "/" },
  { label: "Blog", href: "/blog" },
  { label: "Sobre", href: "/sobre" },
  { label: "Privacidade", href: "/privacidade" },
];

const social = [
  { name: "Instagram", href: "#", icon: Instagram },
  {
    name: "GitHub",
    href: "https://github.com/seu-usuario",
    icon: Github,
  },
  { name: "LinkedIn", href: "#", icon: Linkedin },
];
---

<footer class="mt-20 border-t border-border bg-surface/30">
  <div class="mx-auto max-w-6xl px-6 py-12 md:py-16">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-4">
        <a
          href="/"
          class="text-xl font-bold text-text transition hover:text-primary"
        >
          Jovem <span class="text-primary">Cristão</span>
        </a>
        <p class="max-w-xs text-sm leading-6 text-text-muted">
          Conectando fé e tecnologia para uma nova geração.
        </p>

        <div class="flex gap-x-6">
          {
            social.map((item) => {
              const Icon = item.icon;
              return (
                <a
                  href={item.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-text-muted hover:text-primary transition-colors"
                >
                  <span class="sr-only">{item.name}</span>
                  <Icon size={20} stroke-width={1.5} />
                </a>
              );
            })
          }
        </div>
      </div>

      <div class="mt-12 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div>
          <h3 class="text-sm font-bold uppercase tracking-wider text-text">
            Navegação
          </h3>
          <ul class="mt-4 space-y-4">
            {
              links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-text-muted hover:text-primary transition-colors"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="space-y-4">
          <h3 class="text-sm font-bold uppercase tracking-wider text-text">
            Crie o seu site
          </h3>
          <p class="text-sm text-text-muted">
            Conheça o{" "}
            <a
              href="https://jrstudio.pages.dev/"
              class="text-primary hover:underline"
              target="_blank"
              rel="noopener noreferrer"
            >
              JR Studio Digital
            </a>
            , e tenha sua presença digital.
          </p>
        </div>
      </div>
    </div>

    <div
      class="mt-12 border-t border-border/50 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-xs text-text-muted">
        &copy; {currentYear} Jovem Cristão. Todos os direitos reservados.
      </p>
      <p
        class="text-[10px] text-text-muted/50 uppercase tracking-widest font-mono"
      >
        Feito com Amor & Propósito
      </p>
    </div>
  </div>
</footer>
