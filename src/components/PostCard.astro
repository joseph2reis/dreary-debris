---
// PostCard.astro

interface Props {
  id?: string;
  slug: string;
  title: string;
  description: string;
  image?: string;
  date?: string;
  className?: string;
  labels?: string[];
}

const { title, description, image, slug, date, className, labels } = Astro.props;
---

<a
  href={slug}
  data-labels={labels ? labels.join(",") : ""}
  class:list={[
    "group flex flex-col bg-surface border border-border rounded-3xl overflow-hidden hover:shadow-2xl hover:shadow-primary/10 transition-all duration-300",
    className,
  ]}
>
  {image && (
    <div class="aspect-video overflow-hidden">
      <img
        src={image}
        alt={title}
        loading="lazy"
        class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
      />
    </div>
  )}

  <div class="p-6 flex flex-col grow">
    {date && (
      <div class="flex items-center gap-2 text-xs text-text-muted font-bold uppercase tracking-wider mb-3">
        <span>{date}</span>
      </div>
    )}

    <h2 class="text-xl font-bold text-text mb-3 group-hover:text-primary transition-colors line-clamp-2 leading-snug">
      {title}
    </h2>

    <p class="text-text-muted text-sm line-clamp-3 mb-6 grow">{description}</p>

    <div class="flex items-center text-sm font-bold text-primary group-hover:gap-2 transition-all">
      Ler reflex√£o completa
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="ml-1 transition-all"
      >
        <path d="M5 12h14m-7-7 7 7-7 7" />
      </svg>
    </div>
  </div>
</a>
